{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017"],
    "jsx": "react",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "*.ts", "*.js", "config/*.ts"],
  "exclude": ["node_modules"]
}
